# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update values
# Different environments can have different .env files

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=your_postgres_db
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_PORT=5432

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
BACKEND_PORT=8080

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_PORT=3000

# ===========================================
# NGINX CONFIGURATION (for production with domain)
# ===========================================
# Set to 'true' to enable nginx, 'false' to disable
ENABLE_NGINX=false
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# API & CORS CONFIGURATION
# ===========================================
# Choose ONE configuration based on your environment:

# --- LOCAL DEVELOPMENT ---
NEXT_PUBLIC_API_URL=http://localhost:8080
ALLOWED_ORIGINS=http://localhost:3000

# --- PRODUCTION WITH IP (uncomment to use) ---
# NEXT_PUBLIC_API_URL=http://192.168.100.244:8080
# ALLOWED_ORIGINS=http://192.168.100.244:3000,http://localhost:3000

# --- PRODUCTION WITH DOMAIN (uncomment to use) ---
# NEXT_PUBLIC_API_URL=https://seirotan.desa.id/api
# ALLOWED_ORIGINS=https://seirotan.desa.id,http://localhost:3000
# ENABLE_NGINX=true
# DOMAIN_NAME=seirotan.desa.id
